.swiper-tab {
  width: 100%;
  /* border-bottom: 2rpx solid #ccc; */
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  align-items: center;
}

.swiper {
  height: 100%;
}

.swiper-tab-item {
  width: 20%;
  color: #ccc;
}

.active {
  color: #434343;
  border-bottom: 4rpx solid #434343;
}

swiper {
  text-align: center;
}

.odview {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 2rpx;
}

.daterange {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #f2f2f2;
}

.picker {
  /* width: 40%; *//* height: 80rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #f4f6f8;
  /* padding: 20rpx; *//* margin: 10rpx; */
}

.pickertext {
  font-size: 25rpx;
}

.moreicon {
  width: 60rpx;
  height: 60rpx;
  transform: rotate(90deg);
}

.alllist {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #f2f2f2;
}

.content {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
  margin-top: 10rpx;
  background-color: #fff;
}

.image {
  width: 88rpx;
  height: 88rpx;
}

.vertical-line {
  height: 100rpx;
  width: 1rpx;
  background-color: #f8f8f8;
  margin-left: 20rpx;
}

.titleview {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 20rpx;
}

.title {
  color: #000;
  font-family: "微软雅黑";
  font-size: 34rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
}

.date {
  font-family: "微软雅黑";
  color: #808080;
  font-size: 28rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis; /**文字隐藏后添加省略号*/
  white-space: nowrap; /**强制不换行*/
}
