/* pages/authpage/authpage.wxss */
page {
  height: 100%;
  
}

.welcome {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.authbtn {
  position: fixed;
  bottom: 100rpx;
  width: 80%;
  background-color: rgb(196, 195, 212)
}

.authpage{
  height: 100%;
  display: flex;
  flex-direction: column;
  background: rgb(240, 232, 232);
}

.infoback {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
  align-items: center;
  /* margin-top: 20rpx;
  margin-bottom: 20rpx; */
  margin: 20rpx;
  padding: 10rpx;
}

.image{
  margin-top: 50rpx;
  width: 88rpx;
  height: 88rpx;
}

.text{
  margin-top: 50rpx;
}

.line{
  margin-top: 50rpx;
  width: 100%;
  height: 1rpx;
  background-color: #9a9fa5;
}

.infoview{
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  width: 100%;
  padding-left: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.cotent{
  margin-left: 30rpx;
}

.tipview {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
}

.btn {
  width: 50%;
  background: #428ee2;
  color: rgb(143, 212, 214);
  border-radius: 26px;
  margin-top: 50rpx;
}