/* pages/locklist/locklist.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: rgb(240, 232, 232);
}

.addview {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
  align-items: center;
  margin-top: 20rpx;
  padding-left: 20rpx;
}

.image {
  width: 88rpx;
  height: 88rpx;
}

.text {
  font-size: 34rpx;
  color: rgb(114, 109, 109)
}

.radio-group {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 30rpx;
}

.radio {
  margin-top: 20rpx;
}

.line {
  width: 90%;
  margin-left: 50rpx;
  height: 1rpx;
  background-color: rgba(29, 2, 2, 0.144);
}