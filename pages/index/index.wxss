/**index.wxss**/

page {
  height: 100%;
}

.welcome {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.authbtn {
  position: fixed;
  bottom: 100rpx;
  width: 80%;
  background-color: rgb(196, 195, 212)
}

.container {
  height: 100%;
}

.container.withtab {
  margin: 0 0 0 0;
  /*top: 105rpx;*/
}

.activity {
  width: 750rpx;
  height: 555rpx;
}

.activity image {
  width: 750rpx;
  height: 555rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 25rpx;
  margin-left: 68rpx;
  margin-bottom: 13rpx;
  margin-top: 30rpx;
  margin-right: 72rpx;
  background-color: #fff;
}

.item-left {
  margin-top: 20rpx;
  padding: 15rpx;
  display: table-cell;
}

/* .item-middle {
  flex: 1;
  margin-top: 10rpx;
  display: table-cell;
} */

.item_right {
  display: block;
  padding: 15rpx;
  margin-top: 20rpx;
}

.top_image {
  display: table-column;
}

.text {
  color: #000;
  font-family: "微软雅黑";
  font-weight: bold;
  line-height: 10rpx;
  font-size: 22rpx;
}

.text-middle {
  color: #000;
  font-family: "微软雅黑";
  font-weight: bold;
  line-height: 10rpx;
  font-size: 22rpx;
  padding-left: 17rpx;
}

.image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #eee;
}

.line {
  height: 1rpx;
  width: 100%;
  background-color: #9a9fa5;
}

.vertical-line {
  height: 150rpx;
  width: 1rpx;
  background-color: #9a9fa5;
}